{
    "name": "tomaszlewandowski/wc-collection-date",
    "description": "WooCommerce plugin for managing collection dates with exclusions and working days configuration",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Tomasz Lewandowski",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "yoast/phpunit-polyfills": "^2.0",
        "szepeker/phpstan-wordpress": "^1.0",
        "enlightn/security-checker": "^1.0",
        "phpcs/security-checker": "^2.0",
        "phpstan/phpstan": "^1.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "WC_Collection_Date\\": "includes/"
        },
        "classmap": [
            "includes/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WC_Collection_Date\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit --configuration phpunit.xml"
        ],
        "test-coverage": [
            "vendor/bin/phpunit --configuration phpunit.xml --coverage-html tests/coverage --coverage-clover tests/coverage.xml"
        ],
        "test-watch": [
            "vendor/bin/phpunit --configuration phpunit.xml --stop-on-failure --testdox-text"
        ],
        "cs": [
            "vendor/bin/phpcs --standard=PHPCompatibility,WordPress --extensions=php --ignore=tests,vendor --colors"
        ],
        "cs-fix": [
            "vendor/bin/phpcbf --standard=WordPress --extensions=php --ignore=tests,vendor --colors --working-dir=."
        ],
        "analyze": [
            "vendor/bin/phpstan analyze"
        ],
        "security": [
            "vendor/bin/security-checker security:check --exclude-dev"
        ],
        "pre-commit": [
            "@cs",
            "@analyze",
            "@test",
            "@security"
        ],
        "lint": [
            "find . -name '*.php' -not -path './vendor/*' -not -path './node_modules/*' -exec php -l {} \\;"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
