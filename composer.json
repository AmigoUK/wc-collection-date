{
    "name": "tomaszlewandowski/wc-collection-date",
    "description": "WooCommerce plugin for managing collection dates with exclusions and working days configuration",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Tomasz Lewandowski",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "WC_Collection_Date\\": "includes/"
        },
        "classmap": [
            "includes/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WC_Collection_Date\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "phpcs": [
            "phpcs --standard=WordPress --extensions=php --ignore=*/vendor/*,*/node_modules/* ."
        ],
        "phpcbf": [
            "phpcbf --standard=WordPress --extensions=php --ignore=*/vendor/*,*/node_modules/* ."
        ],
        "lint": [
            "find . -name '*.php' -not -path './vendor/*' -not -path './node_modules/*' -exec php -l {} \\;"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
